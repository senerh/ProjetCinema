<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.PersonnageEntity" table="personnage" schema="cinema">
        <composite-id mapped="true" class="model.PersonnageEntityPK">
            <key-property name="noFilm">
                <column name="NoFilm" sql-type="int(4)"/>
            </key-property>
            <key-property name="noAct">
                <column name="NoAct" sql-type="int(4)"/>
            </key-property>
        </composite-id>
        <property name="nomPers">
            <column name="NomPers" sql-type="varchar(30)" length="30"/>
        </property>
        <many-to-one name="filmByNoFilm" class="model.FilmEntity">
            <column name="NoFilm"/>
        </many-to-one>
        <many-to-one name="acteurByNoAct" class="model.ActeurEntity">
            <column name="NoAct"/>
        </many-to-one>
    </class>
</hibernate-mapping>