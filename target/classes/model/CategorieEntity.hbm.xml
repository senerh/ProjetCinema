<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.CategorieEntity" table="categorie" schema="cinema">
        <id name="codeCat">
            <column name="CodeCat" sql-type="varchar(2)" length="2"/>
        </id>
        <property name="libelleCat">
            <column name="LibelleCat" sql-type="varchar(20)" length="20"/>
        </property>
        <set name="filmsByCodeCat" inverse="true">
            <key>
                <column name="CodeCat"/>
            </key>
            <one-to-many not-found="ignore" class="model.FilmEntity"/>
        </set>
    </class>
</hibernate-mapping>