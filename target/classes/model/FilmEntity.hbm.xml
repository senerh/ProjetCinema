<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.FilmEntity" table="film" schema="cinema">
        <id name="noFilm">
            <column name="NoFilm" sql-type="int(4)"/>
        </id>
        <property name="titre">
            <column name="Titre" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="duree">
            <column name="Duree" sql-type="int(3)"/>
        </property>
        <property name="dateSortie">
            <column name="DateSortie" sql-type="date"/>
        </property>
        <property name="budget">
            <column name="Budget" sql-type="int(8)"/>
        </property>
        <property name="montantRecette">
            <column name="MontantRecette" sql-type="int(8)"/>
        </property>
        <property name="noRea">
            <column name="NoRea" sql-type="int(2)"/>
        </property>
        <property name="codeCat">
            <column name="CodeCat" sql-type="varchar(2)" length="2"/>
        </property>
        <many-to-one name="realisateurByNoRea" class="model.RealisateurEntity">
            <column name="NoRea"/>
        </many-to-one>
        <many-to-one name="categorieByCodeCat" class="model.CategorieEntity">
            <column name="CodeCat"/>
        </many-to-one>
        <set name="personnagesByNoFilm" inverse="true">
            <key>
                <column name="NoFilm"/>
            </key>
            <one-to-many not-found="ignore" class="model.PersonnageEntity"/>
        </set>
    </class>
</hibernate-mapping>