<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.RealisateurEntity" table="realisateur" schema="cinema">
        <id name="noRea">
            <column name="NoRea" sql-type="int(2)"/>
        </id>
        <property name="nomRea">
            <column name="NomRea" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="prenRea">
            <column name="PrenRea" sql-type="varchar(20)" length="20"/>
        </property>
        <set name="filmsByNoRea" inverse="true">
            <key>
                <column name="NoRea"/>
            </key>
            <one-to-many not-found="ignore" class="model.FilmEntity"/>
        </set>
    </class>
</hibernate-mapping>